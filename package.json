{
  "name": "elypad",
  "version": "1.0.0",
  "description": "editor for lua and love2d",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "elypad",
  "license": "mit",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "monaco-editor": "^0.47.0"
  },
 "build": {
  "appId": "com.elypad.editor",
  "productName": "elypad",
  "win": {
    "target": "nsis",
    "icon": "build/icon.ico"
  },
  "linux": {
    "target": "AppImage",
    "category": "Development",
    "icon": "build/icon.png"
  },
  "mac": {
    "target": "dmg",
    "category": "public.app-category.developer-tools",
    "icon": "build/icon.png"
  }
}

}